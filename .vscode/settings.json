{
    "typescript.tsdk": "node_modules/typescript/lib",
    "files.exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "node_modules": true,
      "packages/*/node_modules": true,
      "coverage": true,
      ".nyc_output": true,
      "**/*.js": {
        "when": "$(basename).ts"
      },
      "packages/*/src/**/*.d.ts": true,
      "packages/*/test/*.spec.d.ts": true,
      "packages/*/index.d.ts": true,
      "scripts/*.d.ts": true,
      "**/*.js.map": true,
    },
    "files.associations": {
      "*.js.fix": "javascript",
      "*.jsx.fix": "javascriptreact",
      "*.ts.fix": "typescript",
      "*.tsx.fix": "typescriptreact"
    }
}
