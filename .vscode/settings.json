{
    "typescript.tsdk": "node_modules/typescript/lib",
    "files.exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "node_modules": true,
      "packages/*/node_modules": true,
      "coverage": true,
      ".nyc_output": true,
      "**/*.js": {
        "when": "$(basename).ts"
      },
      "packages/*/src/**/*.d.ts": true,
      "packages/bifrost/test/**/*.d.ts": true,
      "packages/wotan/test/conformance/**/*.d.ts": true,
      "**/*.js.map": true,
    }
}
