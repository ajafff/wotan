{
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "compile": "node scripts/foreach \"{packages/*,scripts}\" \"tsc -p {{file}}\"",
    "lint": "node scripts/foreach \"{packages/*,scripts}\" \"wotan -p {{file}}\" \"tslint -p {{file}} -t stylish\"",
    "check-dependencies": "cd packages/wotan && yarn check-dependencies",
    "test:unit": "ava \"packages/*/test/**/*.spec.js\" -v --snapshot-dir baselines",
    "test:integration": "wotan test 'packages/*/test/**/{,*.}test.json' --exact",
    "test": "run-p \"test:* {@}\" --",
    "report-coverage": "codecov --disable=gcov",
    "coverage": "nyc",
    "test-coverage": "nyc --reporter=html yarn test",
    "verify": "run-s compile check-dependencies lint test-coverage"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@fimbul/disir": "^0.0.1",
    "@fimbul/wotan": "^0.0.1",
    "@types/cross-spawn": "^6.0.0",
    "@types/glob": "^5.0.35",
    "@types/node": "^9.4.0",
    "ava": "^0.25.0",
    "chalk": "^2.3.1",
    "codecov": "^3.0.0",
    "cross-spawn": "^6.0.4",
    "glob": "^7.1.2",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "semver": "^5.5.0",
    "tslint": "^5.9.1",
    "tslint-consistent-codestyle": "^1.11.1",
    "typescript": "^2.7.1"
  }
}
