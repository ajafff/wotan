{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "rootDir": "."
  },
  "include": [
    "scripts",
    "custom-typings",
    "packages/*/src",
    "packages/*/index.ts",
    "packages/*/test/*.spec.ts"
  ],
  "exclude": [
    "scripts/**/*.d.ts",
    "packages/**/*.d.ts",
    // avoid scanning into these directories
    "packages/*/test/fixtures"
  ]
}
