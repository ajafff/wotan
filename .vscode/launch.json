    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/cli.js",
            "args": [
            ],
            "outputCapture": "std",
            "outFiles": [
              "${workspaceFolder}/src/**/*.js"
            ],
            "sourceMaps": true
        },
        {
          "type": "node",
          "request": "launch",
          "name": "Run Testrunner",
          "program": "${workspaceFolder}/src/cli.js",
          "args": [
            "test", "${file}"
          ],
          "outputCapture": "std"
      },
        {
          "type": "node",
          "request": "launch",
          "name": "Run AVA test",
          "program": "${workspaceRoot}/node_modules/ava/profile.js",
          "args": [
            "${fileDirname}/${fileBasenameNoExtension}.js"
          ]
        }
    ]
}
