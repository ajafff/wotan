{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/packages/wotan/bin/main.js",
      "args": [
        "-p", "."
      ],
      "cwd": "${workspaceFolder}/packages/ve",
      "outputCapture": "std",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**/*.js",
        "**/node_modules/tslib/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Testrunner",
      "program": "${workspaceFolder}/packages/wotan/src/cli.js",
      "args": [
        "test", "${file}"
      ],
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**/*.js",
        "**/node_modules/tslib/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run AVA test",
      "program": "${workspaceRoot}/node_modules/ava/profile.js",
      "args": [
        "${fileDirname}/${fileBasenameNoExtension}.js"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js",
        "**/node_modules/tslib/**/*.js"
      ]
    }
  ]
}
